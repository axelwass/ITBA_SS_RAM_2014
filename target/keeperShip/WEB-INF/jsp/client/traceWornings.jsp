<%@ include file="header.jsp"%>


<c:if test="${!empty client}">
	<div class="well">
		<h3>Datos del cliente:</h3>
		<div class="blockquote">
			<b>N&uacute;mero:</b> ${client.id}<br />
			<b>Tel&eacute;fono: </b>${client.tel}<br /> <b>E-Mail: </b>${client.mail}<br>
			 <b>Categor&iacute;a:</b>
			${client.payCategory.name}
			(\$${client.payCategory.price}/\$${client.payCategory.latePrice})<br />
			<b>Nombre:</b>${client.name}<br /> <b>Nombre de la lancha: </b>${client.shipName}<br />
			<b>Saldo a favor: </b>${client.advance}<br /> <b>Deuda total: </b>${client.debt}<br />
			

		</div>
	</div>
	
	<div class="well">
		<h3>Advertencias:</h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Fecha</th>
					<th>Titulo</th>
					<th>Texto</th>
				</tr>
			</thead>
			<tbody>
				<c:forEach items="${client.wornings}" var="worning">
					<tr>
						<td>${worning.date.dayOfMonth}/${worning.date.monthOfYear}/${
									worning.date.year}</td>
						<td>${worning.title}</td>
						<td>
							<a href="<c:url value="viewWorning">
									<c:param name="clientId" value="${client.id}" />
									<c:param name="worningId" value="${worning.id}" />
								</c:url>">
								ver
							</a>
						</td>
					</tr>
				</c:forEach>
			</tbody>
		</table>
	</div>
</c:if>

<c:if test="${!empty client.worningPlan}">
	<div class="well">
		<h3>Advertenca planificada:</h3>
		
		<b>Dia:</b>${client.worningPlan.date.dayOfMonth}/${client.worningPlan.date.monthOfYear}/${
									client.worningPlan.date.year}
			<br/>			
		<b>Horario:</b>${client.worningPlan.hours}
		<br/>
		<b>Destino(mail/telefono):</b>${client.worningPlan.to}
		<br/>
		<b>Se hablo con:</b>${client.worningPlan.spokeTo}
		
		<form:form method="POST" action="worningPlanDone" style="float:right">
				<input type="hidden" name="clientId" value="${client.id}" />
				<button type="submit" class="btn btn-primary">Eliminar</button>
		</form:form>
	</div>
	
</c:if>

<div class="form-actions">
	<form:form method="POST" action="sendAutogeneratedWorning">
		<input type="hidden" name="clientId" value="${client.id}" />
		<button type="submit" class="btn btn-primary">Enviar Mail Autogenerado</button>
		<a class="btn btn-primary" href="createWorning?clientId=${client.id}">Registrar Advertencia</a>
		<a class="btn btn-primary" href="planWorning?clientId=${client.id}">Planificar Advertencia</a>
	</form:form>
</div>


<%@ include file="../footer.jsp"%>